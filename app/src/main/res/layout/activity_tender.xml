                android:text="Tender by Function"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="serif"
                android:layout_below="@id/tv_refresh"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"/>

            <ScrollView
